 <!-- app/src/main/res/layout/activity_genre_selection.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/Background_3"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="choose a genre :"
        android:padding="30dp"
        android:textStyle="bold"
        android:textSize="25sp"
        />
    <CheckBox
        android:id="@+id/checkboxAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Action"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"/>

    <CheckBox
        android:id="@+id/checkboxDrama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drama"
        android:layout_below="@id/checkboxAction"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"/>

    <CheckBox
        android:id="@+id/checkboxComedy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comedy"
        android:layout_below="@id/checkboxDrama"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"/>

    <CheckBox
        android:id="@+id/checkboxSciFi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sci-Fi"
        android:layout_below="@id/checkboxComedy"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"/>

    <CheckBox
        android:id="@+id/checkboxHorror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horror"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="120dp"/>


    <CheckBox
        android:id="@+id/checkboxRomance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkboxHorror"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="200dp"
        android:text="Romance" />

    <CheckBox
        android:id="@+id/checkboxDocumentary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkboxRomance"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="200dp"
        android:text="Documentary" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkboxComedy"
        android:layout_marginTop="86dp"
        android:layout_marginLeft="200dp"
        android:layout_marginBottom="20dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="Next" />
</RelativeLayout>
